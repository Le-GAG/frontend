{
  "name":            "gag-frontend",
  "version":         "0.1.0",
  "private":         true,
  "scripts":         {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "deploy": "npm run build && deployator deploy -c deployment/deployment-config.js -e production",
    "lint": "vue-cli-service lint"
  },
  "dependencies":    {
    "@lahautesociete/data-store": "^1.0.0",
    "bulma":                      "^0.7.1",
    "directus-sdk-javascript":    "^2.11.1",
    "font-awesome":               "^4.7.0",
    "js-cookie":                  "^2.2.0",
    "moment":                     "^2.22.1",
    "normalize.css":              "^8.0.0",
    "vue":                        "^2.5.16",
    "vue-router":                 "^3.0.1",
    "vue-spinner":                "^1.0.3",
    "vue2-google-maps":           "^0.9.7",
    "vuex":                       "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel":       "^3.0.0-beta.11",
    "@vue/cli-plugin-eslint":      "^3.0.0-beta.11",
    "@vue/cli-service":            "^3.0.0-beta.11",
    "@vue/eslint-config-standard": "^3.0.0-beta.11",
    "eslint-plugin-html":          "^4.0.3",
    "node-sass":                   "^4.9.0",
    "sass-loader":                 "^7.0.1",
    "vue-template-compiler":       "^2.5.16"
  },
  "eslintConfig":    {
    "root":          true,
    "env":           {
      "node": true
    },
    "extends":       [
      "eslint:recommended",
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "plugins":       [
      "html"
    ],
    "rules":         {
      "indent":             [ "error", 2 ],
      "comma-dangle":       [ "error", "always-multiline" ],
      "semi":               [ "error", "always" ],
      "operator-linebreak": [ "error", "before" ],
      "yoda":               [ "error", "always" ],
      "no-multi-spaces":    [
        "error", {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "key-spacing":        [
        "error", {
          "align": {
            "beforeColon": false,
            "afterColon":  true,
            "on":          "value"
          }
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss":         {
    "plugins": {
      "autoprefixer": { }
    }
  },
  "browserslist":    [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
